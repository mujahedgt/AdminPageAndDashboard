@{
    ViewData["Title"] = "Home";
}

<div class="text-center py-5">
    <div class="container">
        <h1 class="display-4 mb-4">
            <i class="fas fa-shield-alt me-2"></i> Security Admin Dashboard
        </h1>
        <p class="lead text-muted mb-4">
            Real-time monitoring and anomaly detection for network security
        </p>

        @if (!Context.Session.Keys.Contains("UserId"))
        {
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="card shadow-lg">
                        <div class="card-body p-5">
                            <h5 class="card-title mb-4">Welcome</h5>
                            <p class="text-muted mb-4">
                                Please log in to access the security dashboard and monitoring features.
                            </p>
                            <a asp-controller="Auth" asp-action="Login" class="btn btn-primary btn-lg w-100">
                                <i class="fas fa-sign-in-alt me-2"></i> Login
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Welcome!</strong> Navigate to the <a asp-controller="Dashboard" asp-action="Index" class="alert-link">Dashboard</a> to view real-time security analytics.
            </div>
        }

        <hr class="my-5" />

        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Real-time Monitoring</h5>
                        <p class="card-text text-muted">
                            Monitor network traffic and detect anomalies in real-time
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-brain fa-3x text-success mb-3"></i>
                        <h5 class="card-title">ML Detection</h5>
                        <p class="card-text text-muted">
                            Advanced machine learning models for threat detection
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-users-cog fa-3x text-info mb-3"></i>
                        <h5 class="card-title">User Management</h5>
                        <p class="card-text text-muted">
                            Control user access and manage system permissions
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
